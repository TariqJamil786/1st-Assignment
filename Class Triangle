class triangle
{
    int a , b , c, height;
    triangle (int a , int b, int c, int h)
    {
        a = a ;
        b=b;
        c=c;
        height =h;
    }
    int area()
    {
        return h*b/2;
    }
    int perimeter()
    {
        return a + b +c;
    }
}
class trianglecalculate
{
    public static void main(string[]arg)
    {
        triangle  = new triangle (6,4,5,3);
        system.out.println("area =", .area())
        system.out.println("perimeter =", .perimeter());
    }
}
